<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Airtable</th>
      <th>Space</th>
      <th>Site</th>
      <th>Space name</th>
      <th>Space description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.airtable_id %></td>
        <td><%= space.space_id %></td>
        <td><%= space.site_id %></td>
        <td><%= space.space_name %></td>
        <td><%= space.space_description %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

